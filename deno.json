{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "tasks": {
    "dev": "DEV=true deno run --env-file --allow-net --allow-read --allow-env --watch src/server/server.ts",
    "start": "deno run --allow-net --allow-read --allow-env --entrypoint src/server/server.ts",
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "main.js": "./public/scripts/main.js",
    "main.css": "./public/styles/main.css"
  },
  "fmt": {
    "files": {
      "include": ["public/scripts/"],
      "exclude": ["*.njk"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "semiColons": false
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "style/no-experimental",
        "style/no-unknown-properties",
        "style/no-invalid-position"
      ]
    }
  }
}
