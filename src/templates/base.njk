<!DOCTYPE html>
<html lang="en">
  <head>
    {% include "partials/head.njk" %}
  </head>
  <body>
    <app-shell
      aria-label="application"
      id="app-shell"
      role="application"
    >
      <header 
        aria-label="Site header"
        class="header" 
        id="header" 
        role="banner" 
      >
        <header-logo aria-label="Site logo">
          <a 
            aria-label="Home"
            class="link-logo" 
            href="{{ BASE_URL }}" 
          >
            {% include "partials/logo/logo.njk" %}
          </a>
          <button 
              aria-controls="header-nav"
              aria-expanded="false"
              aria-haspopup="true"
              aria-label="Toggle navigation"
              class="button-toggle-menu" 
              id="header-toggle" 
              type="button"
              popovertarget="main-menu-popover" 
            >
             <span>â˜°</span>
             <span hidden>Toggle navigation</span>
            </button>
        </header-logo>
        <div
          id="main-menu-popover"
              popover="auto"
          aria-label="Primary navigation"  
          aria-orientation="horizontal"
          class="header-nav"
        >
          {% for item in navigationData.menuItems %}
            {% include "partials/menu-item.njk" %}
          {% endfor %}
        </div>
      </header>

      <layout-item 
        aria-label="Main content" 
        end="-1"
        id="main" 
        role="main" 
        row-gap="5" 
        row="main" 
        start="1" 
      >
        {% block content %}{% endblock %}
      </layout-item>

      {% include "partials/site-footer.njk" %}
    </app-shell>
    {% include "partials/feature-detect-popover/feature-detect-popover.njk" %}
  </body>
</html>