{% macro featureCard(feature, index) %}
  <surface-item 
    aria-label="{{ feature.title }}"
    end="auto"
    id="{{ feature.slug }}"
    role="region"
    start="auto"
    {% if index is defined %}area="card-{{ index + 1 }}"{% endif %}
    >
    <div>
      <h3 variant="lg" top="2" bottom="3">{{ feature.title }}</h3>
      <p variant="base" top="1" bottom="2">{{ feature.blurb }}</p>
    </div>
    <a class="link-feature" href="/features/{{ feature.slug }}">
      <span>Read more</span>
    </a>
  </surface-item>
{% endmacro %}