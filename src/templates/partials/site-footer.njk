<footer 
  aria-label="Site footer" 
  id="footer" 
  role="contentinfo" 
  variant="dark"
>
  <grid-auto-fill begin="2" end="-2" gap-column="3">
    <grid-auto-fill-item 
      align="start"
      span="3" 
      variant="column" 
    >
      <a 
        href="/" 
        class="logo-link" 
        aria-label="Home"
      >
        {% include "partials/logo/logo.njk" %}
      </a>
    </grid-auto-fill-item>
    {% for section in siteData.site.footer.sections %}
      <grid-auto-fill-item 
        gap="1"
        span="4" 
        variant="column" 
      >
        <h4 
          bottom="1"
          top="1" 
          variant="md" 
        >{{ section.title }}</h4>
        {% for link in section.links %}
          <a 
            class="footer-link" 
            href="{{ link.url }}"
          >{{ link.text }}</a>
        {% endfor %}
      </grid-auto-fill-item>
    {% endfor %}
  </grid-auto-fill>

  <layout-item 
    end="-3" 
    start="3" 
    variant="column"
  >
    <p 
      bottom="1"
      top="1"
      variant="sm"
      align="center"
    >
      {{ siteData.site.footer.copyright }}
      All rights reserved.
      Built with Deno Powered by <a href="https://deno.com/deploy">Deno Deploy</a>
    </p>
  </layout-item>
</footer>