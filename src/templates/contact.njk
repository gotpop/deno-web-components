{% extends "base-hero.njk" %}

{% block hero %}
  <content-with-sidebar role="banner">
    <content-main>
      <h1 variant="xl" top="2" bottom="2" id="heading-primary">Contact us</h1>
      <p variant="md" id="subheading" top="2">Get in touch to discuss your next project or opportunity.</p>
    </content-main>
    <content-sidebar>
      <a href="/" class="link-button-jumbo" aria-label="Publication" data-brand="linkedin">
        <span>LinkedIn</span>
        <span class="icon-linkedin" variant="next"></span>
      </a>
      <a href="/" class="link-button-jumbo" aria-label="Publication" data-brand="github">
        <span>GitHub</span>
        <span class="icon-github" variant="next"></span>
      </a>
    </content-sidebar>
  </content-with-sidebar>
{% endblock %}

{% block page_content %}
  <content-with-sidebar role="banner">
    <content-main>
      <form action="/api/contact" class="form-contact" method="POST">
        <label for="name">
          <span>Name</span>
        </label>
        <input 
          autocomplete="true"
          id="name"
          maxlength="50"
          minlength="2"
          name="name"
          placeholder="Your name"
          required
          type="text"
/>

        <label for="email">
          <span>Email</span>
        </label>
        <input 
          autocomplete="true"
          id="email"
          maxlength="50"
          minlength="2"
          name="email"
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
          placeholder="Your email address"
          required
          title="Please enter a valid email address"
          type="email"
/>

        <label for="message">
          <span>Message</span>
        </label>
        <textarea 
          cols="30"
          id="message"
          minlength="2"
          name="message"
          placeholder="Get typing"
          required
          rows="10"
        ></textarea>

        <button type="submit">Send</button>
      </form>
    </content-main>
    <content-sidebar>
      <h2 variant="lg" top="1" bottom="3" id="contact-heading">Get in Touch</h2>
      <p top="1" bottom="2">Have a question, suggestion, or just want to say hello? Fill out the form below and I'll get back to you as soon as possible.</p>
      <p top="1">
        <span>Have a question, suggestion, or just want to say hello? Fill out the form below and I'll get back to you as soon as possible.</span></p>
    </content-sidebar>
  </content-with-sidebar>
{% endblock %}