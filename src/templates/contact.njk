{% extends "base-hero.njk" %}

{% block hero %}
  <section id="hero" class="hero-about" role="banner">
    <article class="hero-about-content">
      <h1 variant="xxl" top="3" bottom="2" id="heading-primary">Contact</h1>
      <p variant="md" id="subheading" top="2">Get in contact.</p>
    </article>
    <aside class="links-social">
      <a href="/" class="links-social-item" aria-label="Publication">
        <span>LinkedIn</span>
        {% include "partials/icons/linkedin.njk" %}
      </a>
      <a href="/" class="links-social-item" aria-label="Publication">
        <span>GitHub</span>
        {% include "partials/icons/github.njk" %}
      </a>
    </aside>
  </section>
{% endblock %}

{% block page_content %}
  <div class="page" id="about-page">
    <section
      class="left"
      >
      <h2 variant="lg" top="1" bottom="3" id="contact-heading">Get in Touch</h2>
      <p top="1">Have a question, suggestion, or just want to say hello? Fill out the form below and I'll get back to you as soon as possible.</p>

    </section>
    <div class="right">
      <form 
      action="/api/contact"
      class="form-contact"
      method="POST"
    >
        <label for="name">
          <span>Name</span>
        </label>
        <input 
        autocomplete="true"
        id="name"
        maxlength="50"
        minlength="2"
        name="name"
        placeholder="Your name"
        required
        type="text"
/>

        <label for="email">
          <span>Email</span>
        </label>
        <input 
        autocomplete="true"
        id="email"
        maxlength="50"
        minlength="2"
        name="email"
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
        placeholder="Your email address"
        required
        title="Please enter a valid email address"
        type="email"
      >

        <label for="message">
          <span>Message</span>
        </label>
        <textarea 
        cols="30"
        id="message"
        minlength="2"
        name="message"
        placeholder="Get typing"
        required
        rows="10"
      ></textarea>

        <button type="submit">Send</button>
      </form>

    </div>
  </div>
</surface-item>
{% endblock %}