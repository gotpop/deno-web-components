{% extends "base-hero.njk" %}

{% block hero %}
  <h1 class="heading" id="heading-primary">Features</h1>
  <p class="subheading" id="subheading">A demonstation of the latest in CSS and Web Components</p>
{% endblock %}

{% block page_content %}
  <grid-auto>
    {% for feature in features %}
      <surface-item variant="light" size="large">
        <div>
          <h3 variant="lg">{{ feature.title }}</h3>
          {% for description in feature.description %}
            <p>{{ description }}</p>
          {% endfor %}
        </div>
        <a class="feature-link" href="/features/{{ feature.slug }}">
          <span>Read more</span></a>
      </surface-item>
    {% endfor %}
  </grid-auto>
{% endblock %}