{% extends "base-hero.njk" %}

{% block hero %}
    <h1 class="heading" id="heading-primary">{{ currentFeature.title }}</h1>
{% endblock %}

{% block page_content %}
    <div id="page-wrapper" class="page-wrapper">
        <style>
            {{"page-wrapper" | componentCss | importCss | safe}}
        </style>
        <layout-item
            class="layout-item"
            id="{{ currentFeature.slug }}"
            end="16"
            start="4"
            role="region"
            >
            <style>
                {{"layout-item" | componentCss | importCss | safe}}
            </style>
            <article variant="light" size="large" class="surface" aria-label="{{ currentFeature.title }}">
                <p>{{ currentFeature.description }}</p>
                <a href="/features">Back to Features</a>
            </article>
        </layout-item>
        <layout-item
            class="layout-item"
            end="32"
            id="{{ currentFeature.slug }}"
            role="region"
            start="17"
            >
            <aside variant="light" size="large" class="surface" aria-label="{{ currentFeature.title }}">
                <h2 variant="xl">Feature links</h2>
                <ul>
                    {% for link in currentFeature.links %}
                        <li>
                            <a href="{{ link.link }}" class="link-{{ link.type }}">{{ link.label }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </aside>
        </layout-item>
    </div>
{% endblock %}