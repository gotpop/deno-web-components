{% extends "base-hero.njk" %}

{% block hero %}
  <h1 class="heading" id="heading-primary">Web Platform Features Showcase</h1>
  <p  id="subheading" class="subheading text">A collection of modern web features using <a class="jump-link" href="#section-css">CSS</a>, <a class="jump-link" href="#section-cssom">Houdini Paint API</a>, and Web Platform APIs. Examples include layout techniques, custom paint worklets, and <a class="jump-link" href="#section-bapi">browser APIs</a> working together.</p>
{% endblock %}

{% block page_content %}

  <layout-item
  end="-1"
  start="1"
  >

    {% set sectionTitle = {
      title: "CSS Features",
      id: "section-css",
      gridRow: 1,
      headingId: "heading-secondary-1"
    } %}
    {% include "components/section-title/section-title.njk" %}

    {% for feature in features.cssFeatures %}
      {% include "components/grid-item.njk" %}
    {% endfor %}

    {% set sectionTitle = {
      title: "CSSOM",
      id: "section-cssom",
      gridRow: 4,
      headingId: "heading-secondary-2"
    } %}
    {% include "components/section-title/section-title.njk" %}

    {% for feature in features.cssomFeatures %}
      {% include "components/grid-item.njk" %}
    {% endfor %}

    {% set sectionTitle = {
      title: "Browser API",
      id: "section-bapi",
      gridRow: 6,
      headingId: "heading-secondary-3"
    } %}
    {% include "components/section-title/section-title.njk" %}

    {% for feature in features.browserApiFeatures %}
      {% include "components/grid-item.njk" %}
    {% endfor %}

  </layout-item>
{% endblock %}