{% extends "base-hero.njk" %}

{% block hero %}
  <h1 variant="xxl" top="4" bottom="2" id="heading-primary">Web Platform Features Showcase</h1>
  <p  variant="lg" id="subheading" top="4">A collection of modern web features using <a class="jump-link" href="#section-css">CSS</a>, <a class="jump-link" href="#section-cssom">Houdini Paint API</a>, and Web Platform APIs. Examples include layout techniques, custom paint worklets, and <a class="jump-link" href="#section-bapi">browser APIs</a> working together.</p>
{% endblock %}

{% block page_content %}
  <layout-item
    end="-1"
    start="1"
    row-gap="3"
    >
    <layout-item start="2" end="8" row="1">
      <div class="surface" variant="dark" size="small">
        <a href="#section-css">
          <h2 variant="md" id="section-css" >CSS Features</h2>
        </a>
      </div>
    </layout-item>

    {% for feature in features.cssFeatures %}
      <layout-item
        aria-label="{{ feature.title }}"
        data-card-type="{{ feature.type }}"
        id="{{ feature.slug }}"
        end="{{ feature.layout['item-end'] }}"
        start="{{ feature.layout['item-start'] }}"
        role="region"
        row="{{ feature.layout['row-position'] }}"
        >
        <article class="surface" variant="light" size="large">
          <div>
            <h3 variant="lg" top="0" bottom="3">{{ feature.title }}</h3>
            {% for description in feature.description %}
              <p top="1" bottom="2">{{ description }}</p>
            {% endfor %}
          </div>
          <a class="feature-link" href="/features/{{ feature.slug }}">
            <span>Read more</span></a>
        </article>
      </layout-item>
    {% endfor %}

    <layout-item start="2" end="8" row="4">
      <div class="surface" variant="dark" size="small">
        <a href="#section-cssom">
          <h2 variant="md" id="section-cssom" >CSSOM</h2>
        </a>
      </div>
    </layout-item>

    {% for feature in features.cssomFeatures %}
      <layout-item
        aria-label="{{ feature.title }}"
        data-card-type="{{ feature.type }}"
        id="{{ feature.slug }}"
        end="{{ feature.layout['item-end'] }}"
        start="{{ feature.layout['item-start'] }}"
        role="region"
        row="{{ feature.layout['row-position'] }}"
        >
        <article class="surface" variant="light" size="large">
          <div>
            <h3 variant="lg" flow="body">{{ feature.title }}</h3>
            {% for description in feature.description %}
              <p>{{ description }}</p>
            {% endfor %}
          </div>
          <a class="feature-link" href="/features/{{ feature.slug }}">
            <span>Read more</span></a>
        </article>
      </layout-item>
    {% endfor %}

    <layout-item start="2" end="8" row="6">
      <div class="surface" variant="dark" size="small">
        <a href="#section-bapi">
          <h2 variant="md" id="section-bapi">Browser APIs</h2>
        </a>
      </div>
    </layout-item>

    {% for feature in features.browserApiFeatures %}
      <layout-item
        aria-label="{{ feature.title }}"
        data-card-type="{{ feature.type }}"
        id="{{ feature.slug }}"
        end="{{ feature.layout['item-end'] }}"
        start="{{ feature.layout['item-start'] }}"
        role="region"
        row="{{ feature.layout['row-position'] }}"
        >
        <article class="surface" variant="light" size="large">
          <div>
            <h3 variant="lg" flow="body">{{ feature.title }}</h3>
            {% for description in feature.description %}
              <p>{{ description }}</p>
            {% endfor %}
          </div>
          <a class="feature-link" href="/features/{{ feature.slug }}">
            <span>Read more</span></a>
        </article>
      </layout-item>
    {% endfor %}
  </layout-item>
{% endblock %}