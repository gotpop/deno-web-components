<site-header id="header" class="header" role="banner" aria-label="Site header">
    <style>
        {{"header" | componentCss | importCss | safe}}
    </style>
    <a href="http://localhost:8000" class="logo-link" aria-label="Home">
        {% include "partials/icons/logo.njk" %}
    </a>
    <nav class="nav" aria-label="Primary navigation">
        <ul
            role="menubar"
            class="menubar"
            aria-orientation="horizontal"
            aria-label="Main">
            <li class="menuitem" role="menuitem">
                <a class="menu-item-link {{ 'index' | isActive(currentPage) }}" href="/">Home</a>
            </li>
            <li class="menuitem" role="menuitem">
                <a class="menu-item-link {{ 'about' | isActive(currentPage) }}" href="/about">About</a>
            </li>
            <li class="menuitem" role="menuitem">
                <a class="menu-item-link {{ 'contact' | isActive(currentPage) }}" href="/contact">Contact</a>
            </li>
            <li class="menuitem" role="menuitem">
                <a class="menu-item-link {{ 'features' | isActive(currentPage) }}" href="/features">Features</a>
            </li>
            <li class="menuitem" role="menuitem">
                <a class="menu-item-link {{ 'docs' | isActive(currentPage) }}" href="https://github.com/gotpop/deno-web-components" aria-label="GitHub" target="_blank" rel="noopener">
                    <span hidden>GitHub</span>
                    {% include "partials/icons/github.njk" %}
                </a>
            </li>
        </ul>
    </nav>
</site-header>