<grid-item
  id="{{ item.id }}"
  role="region"
  aria-label="{{ item.label }}"
  data-columns="{{ item.columns }}"
  data-rows="{{ item.rows }}"
  >
  <style>
    {{"grid-item" | componentCss | importCss | safe}}
  </style>
  <{{ item.titleTag }}>{{ item.title }}</{{ item.titleTag }}>
  <p>{{ item.description }}</p>
</grid-item>