<grid-item
  id="{{ feature.id }}"
  role="region"
  aria-label="{{ feature.label }}"
  data-columns="{{ feature.columns }}"
  data-rows="{{ feature.rows }}"
  data-start-column="{{ feature['feature-start'] }}"
  data-end-column="{{ feature['feature-end'] }}"
  
  >
  <style>
    {{"grid-item" | componentCss | importCss | safe}}
  </style>
  <article class="feature">
    <{{ feature.titleTag }}>{{ feature.title }}</{{ feature.titleTag }}>
    <p>{{ feature.description }}</p>
    <a href="/features/{{ feature.slug }}">Read more</a>
  </article>
</grid-item>