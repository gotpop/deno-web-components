<grid-item
  aria-label="{{ feature.title }}"
  class="feature-card"
  content-end="{{ feature.layout['content-end'] }}"
  content-start="{{ feature.layout['content-start'] }}"
  data-card-type="{{ feature.type }}"
  id="{{ feature.slug }}"
  item-end="{{ feature.layout['item-end'] }}"
  item-start="{{ feature.layout['item-start'] }}"
  role="region"
  row-position="{{ feature.layout['row-position'] }}"
  >
  <style>
    {{"grid-item" | componentCss | importCss | safe}}
  </style>
  <article class="feature-content">
    <h3 class="feature-title">{{ feature.title }}</h3>
    {% for description in feature.description %}
      <p class="feature-body">{{ description }}</p>
    {% endfor %}
    <a class="feature-link" href="/features/{{ feature.slug }}">
      <span>Read more</span></a>
  </article>
</grid-item>