{% extends "base-hero.njk" %}

{% block hero %}
    <h1 
        bottom="2" 
        id="heading-primary"
        top="3" 
        variant="xxl" 
    >{{ currentFeature.title }}</h1>
    <p 
        variant="lg" 
        id="subheading" 
        top="3"
    >A collection of the latest in CSS and Web Components</p>
{% endblock %}

{% block page_content %}
    <layout-item
        end="22"
        start="4"
    >
        <surface-item 
            aria-label="{{ currentFeature.title }}"
            size="large" 
            variant="light" 
        >
            <p 
                variant="md" 
                top="2" 
                bottom="2"
            >{{ currentFeature.description }}</p>
            <a 
                class="link-feature" 
                href="/features"
            >
                <span>Back to Features</span></a>
        </surface-item>
    </layout-item>
    <surface-item   
        end="34"
        start="23" 
        variant="light" 
        size="medium" 
        aria-label="{{ currentFeature.title }}"
    >
        <h2 
            variant="lg" 
            top="1" 
            bottom="2"
        >Feature links</h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            {% for link in currentFeature.links %}
                <a 
                class="link-feature" 
                href="{{ link.link }}"
            >
                    <span>{{ link.label }}</span></a>
            {% endfor %}
        </div>
    </surface-item>
{% endblock %}