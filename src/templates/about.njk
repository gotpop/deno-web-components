{% extends "base-hero.njk" %}

{% block hero %}
  <content-with-sidebar role="banner">
    <content-main>
      <h1 variant="lg" top="2" bottom="2" id="heading-primary">About Us</h1>
      <p variant="base" id="subheading" top="1">A collection of the latest in CSS and Web Components.</p>
    </content-main>
    <content-sidebar>
      <a href="/" class="link-button-jumbo" aria-label="Publication" brand="linkedin">
        <span>LinkedIn</span>
        <icon-element icon="linkedin"></icon-element>
      </a>
      <a href="/" class="link-button-jumbo" aria-label="Publication" brand="github">
        <span>GitHub</span>
        <icon-element icon="github"></icon-element>
      </a>
    </content-sidebar>
  </content-with-sidebar>
{% endblock %}

{% block page_content %}
  <content-with-sidebar role="banner">
    <content-main>
      {% include "partials/body-markup-renderer.njk" %}
    </content-main>
    <content-sidebar>
      <h4 variant="md" top="1" bottom="1">On this page</h4>
      {% for item in bodyMarkupData %}
        {% if item
          .tag
          .startsWith('h') %}
          <a href="#{{ item.id }}" class="link-simple">
            <span>{{ item.content }}</span></a>
        {% endif %}
      {% endfor %}
    </content-sidebar>
  </content-with-sidebar>
{% endblock %}