{% extends "base-hero.njk" %}

{% block hero %}
 <section class="block-side" id="block-side" role="banner">
    <article class="main-content">
      <h1 variant="xl" top="2" bottom="2" id="heading-primary">About</h1>
      <p variant="md" id="subheading" top="2">A collection of the latest in CSS and Web Components.</p>
    </article>
    <aside class="side-bar">
      <a href="/" class="links-social-item" aria-label="Publication" data-brand="linkedin">
        <span>LinkedIn</span>
        {% include "partials/icons/linkedin.njk" %}
      </a>
      <a href="/" class="links-social-item" aria-label="Publication" data-brand="github">
        <span>GitHub</span>
        {% include "partials/icons/github.njk" %}
      </a>
    </aside>
  </section>
{% endblock %}

{% block page_content %}
  <div class="page" id="about-page">
    <section
        class="left"
        >
      {% include "partials/body-markup-renderer.njk" %}
    </section>
    <aside class="widget">
      <h4 variant="md" top="1" bottom="1">On this page</h4>
      {% for item in bodyMarkupData %}
        {% if item
          .tag
          .startsWith('h') %}
          <a href="#{{ item.id }}" class="link-simple">
            <span>{{ item.content }}</span></a>
        {% endif %}
      {% endfor %}
    </aside>
  </div>
{% endblock %}