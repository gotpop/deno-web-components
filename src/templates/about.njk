{% extends "base-hero.njk" %}

{# Note this is being used in page content maybe remove later #}
{% import "components/heading/heading.njk" as heading %}
{# Note this is being used in page content maybe remove later #}

{% block hero %}
  <h1 class="heading" id="heading-primary">About page</h1>
  <p class="subheading" id="subheading">A demonstration of the latest in CSS and Web Components</p>
{% endblock %}

{% block page_content %}
  {% include "components/page-nav/page-nav.njk" %}
  <layout-item
            end="30"
            start="13"
            >
    <article variant="light" size="large" class="surface">
      {% for item in bodyMarkupData %}
        {{ heading.render(item.tag, item.content, item.id) }}
      {% endfor %}
    </article>
  </layout-item>
{% endblock %}