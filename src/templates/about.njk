{% extends "base-hero.njk" %}

{% block hero %}
  <h1 variant="xxl" top="4" bottom="2" id="heading-primary">About</h1>
  <p variant="lg" id="subheading" top="4">A collection of the latest in CSS and Web Components</p>
{% endblock %}

{% block page_content %}
  {% include "partials/page-nav/page-nav.njk" %}
  <layout-item
    start="14"
    end="31"
    >
    <surface-item variant="light" size="large">
      {% for item in bodyMarkupData %}
        {% if item.tag == "h2" %}
          <h2 variant="xl" top="2" bottom="4" id="{{ item.id }}">{{ item.content }}</h2>
        {% elif item.tag == "h3" %}
          <h3 variant="lg" top="4" bottom="3" id="{{ item.id }}">{{ item.content }}</h3>
        {% elif item.tag == "p" %}
          <p top="1" bottom="2">{{ item.content }}</p>
        {% elif item.tag == "ul" %}
          <ul>
            {% for listItem in item.items %}
              <li>{{ listItem }}</li>
            {% endfor %}
          </ul>
        {% else %}
          <{{ item.tag }} {% if item.id %}id="{{ item.id }}"{% endif %}>{{ item.content }}</{{ item.tag }}>
        {% endif %}
      {% endfor %}
    </surface-item>
  </layout-item>
{% endblock %}